{
  "name": "lctl-debugger",
  "displayName": "LCTL Time-Travel Debugger",
  "description": "Debug and visualize LCTL v4.0 context chains with time-travel capabilities",
  "version": "0.2.0",
  "publisher": "lctl",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kimasplund/LLM-Context-Trace-Library"
  },
  "license": "AGPL-3.0-only",
  "activationEvents": [
    "workspaceContains:**/*.lctl.json",
    "onView:lctlExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lctl.openDashboard",
        "title": "Open LCTL Dashboard",
        "category": "LCTL",
        "icon": "$(dashboard)"
      },
      {
        "command": "lctl.loadChain",
        "title": "Load Chain",
        "category": "LCTL",
        "icon": "$(file-code)"
      },
      {
        "command": "lctl.replay",
        "title": "Replay Chain",
        "category": "LCTL",
        "icon": "$(debug-start)"
      },
      {
        "command": "lctl.refresh",
        "title": "Refresh LCTL Explorer",
        "category": "LCTL",
        "icon": "$(refresh)"
      },
      {
        "command": "lctl.exportHtml",
        "title": "Export HTML Report",
        "category": "LCTL",
        "icon": "$(export)"
      },
      {
        "command": "lctl.compareChains",
        "title": "Compare Chains",
        "category": "LCTL",
        "icon": "$(diff)"
      },
      {
        "command": "lctl.showStats",
        "title": "Show Statistics",
        "category": "LCTL",
        "icon": "$(graph)"
      },
      {
        "command": "lctl.exportMarkdown",
        "title": "Export Markdown Report",
        "category": "LCTL",
        "icon": "$(markdown)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "lctlExplorer",
          "name": "LCTL Explorer",
          "icon": "$(git-branch)",
          "contextualTitle": "LCTL Chains"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "lctlExplorer",
        "contents": "No LCTL chains found in this workspace.\n\nTo start tracing Claude Code sessions:\n```\nlctl claude init --chain-id my-project\n```\n\n[Open Dashboard](command:lctl.openDashboard)\n[Refresh](command:lctl.refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lctl.openDashboard",
          "when": "view == lctlExplorer",
          "group": "navigation@1"
        },
        {
          "command": "lctl.refresh",
          "when": "view == lctlExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "lctl.loadChain",
          "when": "view == lctlExplorer && viewItem == chainFile",
          "group": "inline@1"
        },
        {
          "command": "lctl.replay",
          "when": "view == lctlExplorer && viewItem == chainFile",
          "group": "inline@2"
        },
        {
          "command": "lctl.exportHtml",
          "when": "view == lctlExplorer && viewItem == chainFile",
          "group": "1_actions@1"
        },
        {
          "command": "lctl.exportMarkdown",
          "when": "view == lctlExplorer && viewItem == chainFile",
          "group": "1_actions@2"
        },
        {
          "command": "lctl.showStats",
          "when": "view == lctlExplorer && viewItem == chainFile",
          "group": "1_actions@3"
        },
        {
          "command": "lctl.compareChains",
          "when": "view == lctlExplorer && viewItem == chainFile",
          "group": "1_actions@4"
        }
      ]
    },
    "configuration": {
      "title": "LCTL Debugger",
      "properties": {
        "lctl.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh the explorer when chain files change"
        },
        "lctl.maxEventsInTree": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of events to show in tree view"
        },
        "lctl.defaultPricing": {
          "type": "string",
          "default": "claude-sonnet-4",
          "enum": [
            "claude-opus-4.5",
            "claude-sonnet-4",
            "claude-haiku-3",
            "gpt-4",
            "gpt-4-turbo",
            "gpt-3.5-turbo"
          ],
          "description": "Default model for cost estimation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "build:webview": "cd webview-ui && npm run build",
    "watch": "tsc -watch -p ./",
    "watch:webview": "cd webview-ui && npm run watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "npm run build:webview && npx @vscode/vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^9.39.2",
    "typescript": "^5.3.3"
  }
}
